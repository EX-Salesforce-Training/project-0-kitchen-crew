public class OriginalPokemon {
    
    List<Account> creatingPokemonAccounts = new List<Account>();
    List<Account> deletingPokemonAccounts = new List<Account>();
    List<Contact> updatingContacts = new List<Contact>();
    List<Contact> creatingBobs = new List<Contact>();
    
    // On initiation adding 151 unique pokemon to accounts
    
    public OriginalPokemon() {
       
        
        for(integer i=0; i<150; i++) {
            Account a = new Account();
             a.Name = 'pokemon' + i;  
             creatingPokemonAccounts.add(a); 
            system.debug(a.Name);
        }
        
        insert creatingPokemonAccounts;
        
     }
    // Quering for the pokemon that were created above and deleting them from the database
    
    public void DeletingPokemon() {
        for(Account a: [SELECT Name FROM Account WHERE Name LIKE 'pokemon%' ] ) {
            deletingPokemonAccounts.add(a);
        }
        delete deletingPokemonAccounts;
    }
    
    
     //Querying for any contacts that don't have an email or phone number and giving them a default
     
    public void GenerateDefaultEmailAndPhone(){
        for(Contact c : [SELECT  Email FROM Contact WHERE Email = null]) {
            c.Email = 'defaultemail@email.com';
            updatingContacts.add(c);
        }
        for(Contact c : [SELECT Phone FROM Contact WHERE Phone = null]) {
            c.Phone = '1234567889';
            updatingContacts.add(c);
        }
        database.update(updatingContacts,true); 
    }
    
   
    // Creating 200 new contacts called bob and also updating all existing contact names to bob as well
    
    public void createNewBobs() {
        for(integer i=0; i<200; i++) {
            Contact c = new Contact();
            c.LastName = 'Bob';
            c.FirstName = 'Bob';
            creatingBobs.add(c);
        }
        
        for(Contact c: [SELECT FirstName FROM Contact]){
            c.FirstName = 'Bob';
            creatingBobs.add(c);
        }   
        upsert creatingBobs;
    }
}
